set mbox_type         = Maildir
set sendmail          = /usr/bin/msmtp
set from              = "Lorenz Bischof <bischof@puzzle.ch>"
set to_chars          = "- +CFL"                               # indicate mail not addressed to me directly
set folder            = ~/Mail
set spoolfile         = "+INBOX"
set trash             = "+Archives"
set record            = "+Sent"
set postponed         = "+Drafts"
set editor            = "vim -c 'set ft=mail'"
set sort              = threads
set timeout           = 30                                     # check new mail
set pager_index_lines = 10                                     # show 10 index page while in pager
set charset           = "utf-8"
set beep_new          = yes

set text_flowed
set auto_tag                                                   # apply actions on all tagged messages
set include                                                    # always include the message in replies
set fast_reply		                                       # skip initial prompts when replying
set edit_headers

# headers to show
ignore *                                                       # ignore all headers
unignore from: to: cc: date: subject:                          # show only these

# PGP
set crypt_autosign = yes
set crypt_replyencrypt = yes
set crypt_replysign = yes
set crypt_replysignencrypted = yes
set crypt_verify_sig = yes
set pgp_auto_decode = yes
set pgp_autoinline = yes
set pgp_sign_as = 'AFBA32A6'

set header_cache      = "~/.mutt/headers"
set alias_file        = "~/.mutt/aliases"

color normal default default
color status blue default                                      # status lines in the folder index sed for the mini-help line
color attachment default default
color quoted default default
color signature default default
color tilde default default                                    # fill empty space below message
color indicator black blue

color header default default .
#color header yellow black ^From
#color header yellow black ^Subject

source ~/.mutt/mailboxes
source ~/.mutt/aliases
