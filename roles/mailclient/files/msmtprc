# Set default values for all following accounts.
defaults
auth           on
tls            on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile        ~/.msmtp.log

account         work
host            mail.puzzle.ch
from            bischof@puzzle.ch
user            bischof@puzzle.ch
passwordeval "gpg -dq .passwd/puzzle.gpg"

account default: work

