set spell spelllang=de

set textwidth=0
set wrapmargin=0
set linebreak
set wrap
set showbreak=+   " show a symbol if the line is wrapped

nnoremap j gj
nnoremap k gk
vnoremap j gj
vnoremap k gk
nnoremap <Down> gj
nnoremap <Up> gk
vnoremap <Down> gj
vnoremap <Up> gk
inoremap <Down> <C-o>gj
inoremap <Up> <C-o>gk
