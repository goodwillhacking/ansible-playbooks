general {
        output_format = "i3bar"
        colors = true
        interval = 5
}

order += "battery 0"
order += "tztime local"


tztime local {
    format = "%H:%M"
}

battery 0 {
    format = "%status %percentage %remaining (%emptytime %consumption)"
    hide_seconds = true
    integer_battery_capacity = true
}
